{% extends 'base.html.twig' %}

{% block title %}Hello JobListController!
{% endblock %}

{% block body %}
	{{ parent() }}
	<main>
		<!-- section hero recherche -->
		<section class="hero-recherche">
			<div class="container">
				<div class="row">
					<div class="centrer-h-recherche col-12 col-sm-12 col-md-12 col-lg-6">
						<h2>Allez genius !<br> Trouve ta <span>chance</span> ici</h2>
						<div class="container-search">
							<div class="d-flex col-12">
                             	{{ form_start(form,{'attr': {'class':"d-flex col-12"}})}}
                             	{{ form_widget(form.mots,{'attr': {'class':' me-2 '}}) }}
								<button class="btn mon-btn btn-lancer gestion-btn" type="submit">
								<i class="mon-i fas fa-search"></i>
								<span>&nbsp; Lance-toi !</span></button>
								{{ form_end(form) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- section resultats recherche -->
		<section class="resultats-recherche color-title-resultats pb-4 pt-4">
			<div class="container">
				<div class="row">
					<div class="title-section-recherche col-12 col-sm-12 col-md-12 col-lg-12">
    	                <h5>Nombre total de la recherche ({{ jobs.getTotalItemCount }})</h5>
						<h6>Filtrer</h6>
					</div>
				</div>
			</div>
		</section>
		<section class="resultats-recherche">
			{% for job in jobs %}
             <a href="/offre/read/{{job.id}}" class="row container-blocs-resultats">

				<div class="container-resultats col-12 col-sm-12 col-md-12 col-lg-12">
					<div class="card mb-5 ma-card">
						<div class="row g-0">
							<div class="col-md-4 gauche-card">
								<img src="/assets/images/r0.jpeg" alt="Agence r0" class="img-fluid">
							</div>
							<div class="col-md-8">
								<div class="card-body ma-card-body">
									<ul>
										<span>
											<small class="text-muted">{{job.companyname}}</small>
										</span>
										<h5 class="card-title">{{job.missiontitle}}</h5>
										<li class="card-text">
											<small class="text-muted">
												<i class="fas fa-briefcase"></i>&nbsp; {{job.type}}</small>
										</li>
										<li class="card-text d-flex justify-content-between">
											<small class="text-muted">
												<i class="far fa-clock"></i>&nbsp; Mise en ligne le : {{job.date|date("d/m/Y")}}
											</small>
										</li>
									</ul>
                                   

								</div>
							</div>
						</div>
					</div>
				</div>
			</a>
			{% endfor %}
			</div>
				<div class="d-flex-center text-alert">
					{{ knp_pagination_render(jobs) }}
				</div>
         	</div> 
		</section>
	</main>
</body>
</html>
{% endblock %}

