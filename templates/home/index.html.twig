{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    {{ parent() }}
      <main>
        <!-- section hero -->
        <section class="hero">
          <div class="container">
            <div class="row mon-d-flex-between">
              <div class="gauche col-12 col-sm-12 col-md-12 col-lg-6">
                <h1 class="main-titre">Trouvez l’emploi qui vous convient</h1>
                <p class="text-hero">
                    Little Genius est une pépinière de talents, dont le but est de vous aider à intégrer le monde du developpement.
                    Nous vous accompagnons afin de chercher vos premières missions/stages, et aidons les entreprise à trouver de nouveaux talents !
                </p>
                
                <div class="container-search">
                  <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="PHP, Vue.js, JavaScript,…" aria-label="Search">
                    <button class="btn mon-btn btn-lancer" type="submit"><i class="mon-i fas fa-search"></i> &nbsp; Se lancer !</button>
                  </form>
                </div>

                <div class="container-pastille">
                  <span class="span-langage">PHP</span>
                  <span class="span-langage">JAVASCRIPT</span>
                  <span class="span-langage">SYMFONY</span>
                  <span class="span-langage">VUE.JS</span>
                </div>

              </div>

              <div class="droit col-12 col-sm-12 col-md-12 col-lg-6">
                <img src="assets/images/dev-junior.jpg" alt="développeur juniors" class="img-responsive  image-dev-junior">
              </div>
            </div>
          </div>
        </section>

        <!-- section explication -->
        <section class="explication">
          <div class="container">
            <div class="row">
              <div class="text-center title-section col-12 col-sm-12 col-md-12 col-lg-12">
                <h2>Explications du services</h2>
                <p class="text-content col-5">
                  Lorem ipsum dolor sit amet, consectetur 
                  Finis  de trouver un stage/une mission, Little genius vous 
                  facilite
                </p>
              </div>
            </div>

            <div class="row container-blocs-explication">
              <div class="h-100 col-12 col-sm-12 col-md-12 col-lg-3">
                <div class="bloc-explication"></div>
              </div>
              <div class="h-100 col-12 col-sm-12 col-md-12 col-lg-3">
                <div class="bloc-explication"></div>
              </div>
              <div class="h-100 col-12 col-sm-12 col-md-12 col-lg-3">
                <div class="bloc-explication"></div>
              </div>
            </div>
          </div>
        </section>

        <!-- section genius du mois -->
        <section class="genius-mois">
          <div class="container">
            <div class="row">
              <div class="text-center title-section col-12 col-sm-12 col-md-12 col-lg-12">
                <h2>Les genius du mois</h2>
                <p class="text-content col-5">
                  Lorem ipsum dolor sit amet, consectetur 
                  Finis  de trouver un stage/une mission, Little genius vous 
                  facilite
                </p>
              </div>
            </div>
            <div class="row d-flex mt-5 sous-genius">
                {% for candidat in candidats %}
                    <div class="blocs-genius-mois">
                        <img class="img-genius-index" src="uploads/images/{{candidat.photo}}">
                        <h3>{{candidat.name}}</h3>
                    </div>
                {% endfor %}
            </div>
          </div>
        </section>

        <!-- section rejoignez-nous -->
        <section class="rejoignez">
          <div class="container">
            <div class="row">
              <div class="container-rejoignez col-12 col-sm-12 col-md-12 col-lg-6"></div>
              
            </div>
          </div>
        </section>

        <!-- section Inscris-toi -->
        <section class="explication">
          <div class="container">
            <div class="row">
              <div class="text-center title-section col-12 col-sm-12 col-md-12 col-lg-12">
                <h2>Abonne-toi en 1 clic </h2>
                <p class="text-content col-5">
                  Reçois directement des offres personnalisés que pour toi
                </p>
              </div>
            </div>

            <div class="row">
              <div class="container-abonne col-12 col-sm-12 col-md-12 col-lg-6">
                <form class="d-flex">
                  <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="geoffrey@example.com">
                  <button class="btn mon-btn btn-lancer" type="submit"><i class="far mon-i fa-envelope"></i> &nbsp; Abonne-toi !</button>
                </form>
              </div>
              
            </div>

        </section>
      
      </main>

      <!--LE FOOTER-->
      {% include "footer.html.twig" %}
{% endblock %}
