{% extends 'base.html.twig' %}



{% block title %}Inscription{% endblock %}

{% block body %}
{{ parent() }}
<main class="mon-d-flex p-t100">

<section class="connexion">
	<div class="container">
		<div class="row">
			<div class="col-12">

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscription</h1>

{{ form_start(registrationForm,{'attr':{'class':'formulaire'}}) }}

{{ form_row(registrationForm.email,{'class':'form-control'}) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
<p class="container-envoye">
<input type="submit" class="btn mon-btn btn-connexion" value="S'inscrire">
</p>

    {{ form_end(registrationForm) }}
</div></div></div></section></main>

{% endblock %}
